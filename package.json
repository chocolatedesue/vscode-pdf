{
  "name": "modern-pdf-preview",
  "displayName": "Modern PDF Preview (WASM)",
  "description": "A high-performance PDF previewer for VS Code powered by WebAssembly. Feature-rich, secure, and fast.",
  "publisher": "chocolatedesue",
  "icon": "icon.png",
  "author": {
    "name": "chocolatedesue"
  },
  "homepage": "https://github.com/chocolatedesue/vscode-pdf",
  "license": "MIT",
  "categories": [
    "Visualization",
    "Programming Languages"
  ],
  "repository": {
    "url": "https://github.com/chocolatedesue/vscode-pdf"
  },
  "version": "1.5.4",
  "browser": "./dist/extension.browser.js",
  "main": "./dist/extension.node.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "modernPdfViewer.PDFEdit",
        "displayName": "Modern PDF Preview",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "Modern PDF Preview",
      "properties": {
        "modernPdfViewer.defaultZoomLevel": {
          "type": "string",
          "default": "page-width",
          "enum": [
            "page-width",
            "page-fit",
            "page-height",
            "auto",
            "50%",
            "75%",
            "100%",
            "125%",
            "150%",
            "200%",
            "300%",
            "400%"
          ],
          "description": "The initial zoom level when opening a PDF file."
        },
        "modernPdfViewer.defaultSpreadMode": {
          "type": "string",
          "default": "odd",
          "enum": [
            "none",
            "odd",
            "even"
          ],
          "description": "The initial spread mode when opening a PDF file."
        },
        "modernPdfViewer.tabBar": {
          "type": "string",
          "default": "never",
          "enum": [
            "always",
            "multiple",
            "never"
          ],
          "description": "Control the visibility of the internal tab bar."
        }
      }
    }
  },
  "commands": [
    {
      "command": "modernPdfViewer.forceSave",
      "title": "Save PDF",
      "category": "PDF Preview"
    }
  ],
  "keybindings": [
    {
      "command": "modernPdfViewer.forceSave",
      "key": "ctrl+s",
      "mac": "cmd+s",
      "when": "activeCustomEditorId == 'modernPdfViewer.PDFEdit'"
    },
    {
      "command": "workbench.action.closeActiveEditor",
      "key": "ctrl+w",
      "mac": "cmd+w",
      "when": "activeCustomEditorId == 'modernPdfViewer.PDFEdit'"
    }
  ],
  "scripts": {
    "build": "webpack",
    "package": "sh scripts/package.sh",
    "deploy": "sh scripts/publish.sh",
    "test-web": "vscode-test-web --extensionDevelopmentPath=. .",
    "test-web-headless": "vscode-test-web --extensionDevelopmentPath=. --headless ."
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@embedpdf/svelte-pdf-viewer": "^2.2.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-web": "^0.0.78",
    "@vscode/vsce": "^3.7.1",
    "css-loader": "^7.1.2",
    "ovsx": "^0.10.8",
    "style-loader": "^4.0.0",
    "svelte": "^5.46.4",
    "svelte-loader": "^3.2.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@embedpdf/core": "^2.2.0",
    "@embedpdf/plugin-document-manager": "^2.2.0",
    "@embedpdf/plugin-render": "^2.2.0"
  }
}
